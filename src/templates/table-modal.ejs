<div class="container">
  <div class="row align-items-center">
    <div class="col-12">
      <div class="block-table">
        <div class="block-table__text">Я моделист</div>
        <div class="block-table__table"></div>
      </div>
    </div>
    <div class="col-12">
      <form action="" class="block-table__change">
        <div class="row">
          <div class="col-md-6 mb-3">
            <label>Цвет таблички:</label>
            <select name="tablecolor">
              <option selected="selected" value="#eeeeee">Cеребро</option>
              <option selected="selected" value="#ffd700">Золото</option>
              <option selected="selected" value="#000000">Черный</option>
            </select>
            <label class="mt-4">Цвет шрифта:</label>
            <select name="fontcolor">
              <option selected="selected" value="#000000">Черный</option>
              <option value="#c0c0c0 ">Cеребро</option>
              <option value="#ffd700">Золото</option>
            </select>
          </div>
          <div class="col-md-6 mb-3">
            <label>Шрифт:</label>
            <select name="font">
              <option selected="selected" value="Mistral">Mistral</option>
              <option value="Times New Roman">Times New Roman</option>
              <option value="Deutsch Gothic">Deutsch Gothic</option>
              <option value="Comic Sans MS">Comic Sanc MS</option>
              <option value="Century Gothic">Century Gothic</option>
            </select>
            <label class="mt-4">Размер шрифта:</label>
            <select name="fontsize">
              <option selected="selected" value="16pt">16</option>
              <option value="18pt">18</option>
              <option value="20pt">20</option>
            </select>
          </div>
          <div class="col-12 mb-3">
            <label>Текст на табличке</label>
            <textarea name="text">Я моделист</textarea>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
