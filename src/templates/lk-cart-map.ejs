<!DOCTYPE html>
<html>
<head>
  <title>Demo Page</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>
<body>
  <section id="header">
    <%- include modules/modal-loader.ejs %>
    <%- include modules/preheader.ejs %>
    <%- include modules/header.ejs %>
  </section>
  <section id="menu">
    <%- include modules/menu.ejs %>
  </section>
  <div class="sliderInner">
      <div class="carousel-inner">
          <div class="container">
              <div class="bread">
                  <a href="/">Главная</a>  »  Способы доставки
              </div>
              <h1 class="slider-text">
                  Личный кабинет
              </h1>
          </div>
          <img class="d-block w-100" src="./assets/img/headers/reg.jpg" alt="">
      </div>
  </div>

  <%- include cart/cart-top.ejs %>

  <div class="bg-gray py-3 mobile-menu d-lg-none">
      <div class="container">
          <div class="row">
              <div class="col-auto">
                  <a href="#" data-toggle-cata-left-menu class="d-flex align-items-center">
                      <i class="icon icon_burger"></i>
                      <div class="ml-3 txt_22px text-uppercase font-weight-bold txt-c-black">Меню</div>
                  </a>
              </div>
          </div>
      </div>
  </div>
  <section id="content">
    <div class="py-5">
      <div class="container">
        <div class="row">
            <div class="col-lg-2 cata-left-menu">
                <div class="holder">
                    <a href="#" data-toggle-cata-left-menu class="icon icon_close"></a>
                    <p class="h1">Меню</p>
                    <%- include cart/cart-list.ejs %>
                </div>
            </div>
            <div class="col-lg-10">


                <h3>Моя корзина</h3>


                <div class="row-scroll d-flex align-items-start mb-5">
                    <a href="" class="bordered btn mr-3 text-black-50 d-flex align-items-center p-3 flex-shrink-0">
                        <img class="mr-2" src="./assets/vectors/crt1.svg" alt="">
                        <span class="txt_18px font-weight-bold">корзина</span>
                    </a>
                    <div class="bordered btn mr-3 text-black-50 d-flex align-items-center p-3 flex-shrink-0">
                        <img class="mr-2" src="./assets/vectors/crt2.svg" alt="">
                        <span class="txt_18px font-weight-bold">доставка</span>
                    </div>
                    <div class="bordered active btn mr-3 text-black-50 d-flex align-items-center p-3 flex-shrink-0">
                        <img class="mr-2" src="./assets/vectors/crt25.svg" alt="">
                        <span class="txt_18px font-weight-bold">самовывоз</span>
                    </div>
                    <div class="disabled btn mr-3 text-black-50 d-flex align-items-center p-3 flex-shrink-0">
                        <img class="mr-2" src="./assets/vectors/crt3.svg" alt="">
                        <span class="txt_18px font-weight-bold">оплата</span>
                    </div>
                </div>

                <script src="https://api-maps.yandex.ru/2.1/?apikey=95907f08-d778-495c-96cf-92c2c3b150c8&lang=ru_RU" type="text/javascript">
                </script>
                <form action="">
                    <div class="map-accord">

                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <a class="nav-link map-tabs active" data-toggle="tab" href="#d1">Доставка 1</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link map-tabs" data-toggle="tab" href="#d2">Доставка 2</a>
                            </li>
                        </ul>
                        <div class="tab-content bg-gradient b-radius">
                            <div id="d1" class="container tab-pane active"><br>
                                <div class="row map-holder" data-map="map1">
                                    <div class="col-md-8 mb-3">
                                        <div class="ya-map" id="map1" data-url="/assets/points.json" data-type="cdek" data-lt="55.76" data-lg="37.64"></div>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <div class="bord-block d-flex flex-column justify-content-center align-items-start p-4 h-100">
                                            <p class="header-text txt_24px mb-3"><b>Выберите пункт самовывоза:</b></p>
                                            <p class="title font-weight-bold txt_20px mb-2"></p>
                                            <p class="text"></p>
                                            <a href="#" class="close-map"></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="d2" class="container tab-pane fade"><br>
                                <div class="row map-holder" data-map="map2">
                                    <div class="col-md-8 mb-3">
                                        <div class="ya-map" id="map2" data-url="/assets/points.json" data-type="cdek" data-lt="55.76" data-lg="37.64"></div>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <div class="bord-block d-flex flex-column justify-content-center align-items-start p-4 h-100">
                                            <p class="header-text txt_24px mb-3"><b>Выберите пункт самовывоза:</b></p>
                                            <p class="title font-weight-bold txt_20px mb-2"></p>
                                            <p class="text"></p>
                                            <a href="#" class="close-map"></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="bord-block d-flex flex-column justify-content-center align-items-start h-100 disabled show-deliver-point">
                        <div class="p-4">
                            <p class="header-text txt_24px mb-3"><b>Выбран пункт</b></p>
                            <p class="title font-weight-bold txt_20px mb-2"></p>
                            <p class="text"></p>
                            <input type="hidden" name="uid" value="">
                            <div class="d-flex">
                                <a href="#" class="btn red">Перейти к оплате</a>
                                <a href="#" class="btn ml-2">Изменить выбор точки</a>
                            </div>
                        </div>
                    </div>
                </form>




            </div>
        </div>
      </div>
    </div>
  </section>

  <section id="footer">
    <%- include modules/footer.ejs %>
  </section>

</body>
</html>
